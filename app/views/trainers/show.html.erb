<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Pokemons</h4>
    <ul>
        <% if @trainer.pokemons.empty? %>
            <p>No pokemon!</p>
        <% else %>
	        <% @trainer.pokemons.each do |pokemon| %>
	          <li><%= pokemon.name %>: level <%= pokemon.level %>, health <%= pokemon.health %><%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></li>
	        <% end %>
        <% end %>
    </ul>

<% if current_trainer == @trainer %>
	 <%= link_to "New Pokemon", pokemons_new_path %>
<% end %>

